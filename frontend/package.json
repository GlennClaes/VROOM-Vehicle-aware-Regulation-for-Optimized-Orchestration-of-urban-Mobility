{
  "name": "frontend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest",
    "test:e2e": "start-server-and-test 'npm run dev -- --port 5173' 5173 'playwright test --headless --workers=1'",
  "test:e2e:ci": "start-server-and-test 'npm run dev -- --port 5173' 5173 'playwright test --headless --workers=1'",
    "lint": "run-s lint:*",
    "lint:oxlint": "oxlint . --fix",
    "lint:eslint": "eslint . --fix --cache",
    "format": "oxfmt src/"
  },
  "dependencies": {
    "pinia": "^3.0.4",
    "playwright": "^1.58.2",
    "vue": "beta",
    "vue-router": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitejs/plugin-vue-jsx": "^5.1.3",
    "@vitest/eslint-plugin": "^1.6.6",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-oxlint": "~1.42.0",
    "eslint-plugin-playwright": "^2.5.1",
    "eslint-plugin-vue": "~10.7.0",
    "globals": "^17.3.0",
    "jsdom": "^27.4.0",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.27.0",
    "oxlint": "~1.42.0",
    "start-server-and-test": "^2.1.3",
    "vite": "beta",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "overrides": {
    "vue": "beta",
    "@vue/compiler-core": "beta",
    "@vue/compiler-dom": "beta",
    "@vue/compiler-sfc": "beta",
    "@vue/compiler-ssr": "beta",
    "@vue/compiler-vapor": "beta",
    "@vue/reactivity": "beta",
    "@vue/runtime-core": "beta",
    "@vue/runtime-dom": "beta",
    "@vue/runtime-vapor": "beta",
    "@vue/server-renderer": "beta",
    "@vue/shared": "beta",
    "@vue/compat": "beta"
  }
}
